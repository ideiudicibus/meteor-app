@color_1: #F39C12;
@color_2: #333;
@color_3: #fff;
@color_4: #34495E;
@color_5: #4E71A8;
@color_6: #3FA1DA;
@color_7: #E3411F;
@color_8: #CA3737;
@color_9: #3A3A3A;
@background_color_1: #ECF0F1;
@background_color_2: #34495E;
@background_color_3: #009688;
@background_color_4: #fff;
@background_color_5: #16A085;
@background_color_6: #F39C12;
@background_color_7: white;
@border_color_1: #34495E;
@border_color_2: #009688;

/*recent-post-col////////////////////*/
/*===============ARCHIVES////////////////////////////*/
/*categories//////////////////////*/


.btn-default-blog {
	color: @color_2;
	background-color: @background_color_3;
	border-color: @border_color_2;
	border-radius: 0px;
	color: @color_3;
}
#blog-section {
	margin-top: 40px;
	margin-bottom: 80px;
}
.content-title {
	padding: 5px;
	background-color: @background_color_4;
	h3 {
		a {
			color: @color_4;
			text-decoration: none;
			transition: 0.5s;
			&:hover {
				color: @color_1;
			}
		}
	}
}
.content-footer {
	background-color: @background_color_5;
	padding: 10px;
	position: relative;
	span {
		a {
			color: @color_3;
			display: inline-block;
			padding: 6px 5px;
			text-decoration: none;
			transition: 0.5s;
			&:hover {
				color: @color_1;
			}
		}
	}
	&:hover {
		.user-ditels {
			display: block;
		}
	}
	.user-ditels {
		.user-img {
			width: 100px;
			height: 100px;
			float: left;
		}
	}
}
aside {
	margin-top: 30px;
	-webkit-box-shadow: 1px 4px 16px 3px rgba(199,197,199,1);
	-moz-box-shadow: 1px 4px 16px 3px rgba(199,197,199,1);
	box-shadow: 1px 4px 16px 3px rgba(199,197,199,1);
	.content-footer {
		>img {
			width: 33px;
			height: 33px;
			border-radius: 100%;
			margin-right: 10px;
			border: 2px solid #fff;
		}
	}
}
.user-ditels {
	width: 300px;
	top: -100px;
	height: 100px;
	padding-bottom: 99px;
	position: absolute;
	border: solid 2px #fff;
	background-color: @background_color_2;
	right: 25px;
	display: none;
	z-index: 1;
}
.user-small-img {
	cursor: pointer;
}
.user-full-ditels {
	h3 {
		color: @color_3;
		display: block;
		margin: 0px;
		padding-top: 10px;
		padding-right: 28px;
		text-align: right;
	}
	p {
		color: @color_3;
		display: block;
		margin: 0px;
		padding-right: 20px;
		padding-top: 5px;
		text-align: right;
	}
}
.social-icon {
	background-color: @background_color_4;
	margin-top: 10px;
	padding-right: 20px;
	text-align: right;
	>a {
		font-size: 20px;
		text-decoration: none;
		padding: 5px;
	}
	a {
		&:nth-of-type(1) {
			color: @color_5;
		}
		&:nth-of-type(2) {
			color: @color_6;
		}
		&:nth-of-type(3) {
			color: @color_7;
		}
		&:nth-of-type(4) {
			color: @color_8;
		}
		&:nth-of-type(5) {
			color: @color_9;
		}
	}
}
.widget-sidebar {
	background-color: @background_color_4;
	padding: 20px;
	margin-top: 30px;
}
.title-widget-sidebar {
	font-size: 14pt;
	border-bottom: 2px solid #e5ebef;
	margin-bottom: 15px;
	padding-bottom: 10px;
	margin-top: 0px;
	&:after {
		border-bottom: 2px solid #f1c40f;
		width: 150px;
		display: block;
		position: absolute;
		content: '';
		padding-bottom: 10px;
	}
}
.recent-post {
	width: 100%;
	height: 80px;
	list-style-type: none;
	a {
		text-decoration: none;
		color: @color_4;
		transition: 0.5s;
		&:hover {
			color: @color_1;
		}
	}
}
.post-img {
	img {
		width: 100px;
		height: 70px;
		float: left;
		margin-right: 15px;
		border: 5px solid #16A085;
		transition: 0.5s;
		&:hover {
			border: 5px solid #F39C12;
		}
	}
	color: @color_1;
}
button.accordion {
	background-color: @background_color_5;
	color: @color_3;
	cursor: pointer;
	padding: 18px;
	width: 100%;
	border: none;
	text-align: left;
	outline: none;
	font-size: 15px;
	transition: 0.4s;
	&:hover {
		background-color: @background_color_6;
		color: @color_3;
	}
	&:after {
		content: '\002B';
		color: @color_3;
		font-weight: bold;
		float: right;
		margin-left: 5px;
	}
}
button.accordion.active {
	background-color: @background_color_6;
	color: @color_3;
	&:after {
		content: "\2212";
	}
}
.panel-post {
	padding: 0 18px;
	background-color: @background_color_7;
	max-height: 0;
	overflow: hidden;
	transition: max-height 0.2s ease-out;
}
.categories-btn {
	background-color: @background_color_6;
	margin-top: 30px;
	color: @color_3;
	cursor: pointer;
	padding: 18px;
	width: 100%;
	border: none;
	text-align: left;
	outline: none;
	font-size: 15px;
	transition: 0.4s;
	&:after {
		content: '\25BA';
		color: @color_3;
		font-weight: bold;
		float: right;
		margin-left: 5px;
	}
	&:hover {
		background-color: @background_color_5;
		color: @color_3;
	}
}
.form-control {
	border-radius: 0px;
}
.btn-warning {
	border-radius: 0px;
	background-color: @background_color_6;
	margin-top: 15px;
}
.input-group-addon {
	border-radius: 0px;
}
@media (max-width:768px) {
	.user-ditels {
		right: 5px;
	}
}
